<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="zpiteam.zpiprojekt.PacjentActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/synchroText"
            android:layout_weight="0.05" />

        Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synchronizuj z opiekunem"
            android:id="@+id/acceptSynchro"
            android:layout_gravity="center_horizontal" />

        Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Odrzuć prośbę"
            android:id="@+id/declineSynchro"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sprawdź synch"
            android:id="@+id/checkForSynch"
            android:onClick="showAlert"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lokalizacja"
            android:id="@+id/localizeBtn"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>

</RelativeLayout>
